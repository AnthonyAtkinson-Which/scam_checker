<p id="notice"><%= notice %></p>

<h1>Listing Scams</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Email</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scams.each do |scam| %>
      <tr>
        <td><%= scam.title %></td>
        <td><%= scam.email %></td>
        <td><%= scam.text %></td>
        <td><%= link_to 'Show', scam %></td>
        <td><%= link_to 'Edit', edit_scam_path(scam) %></td>
        <td><%= link_to 'Destroy', scam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

